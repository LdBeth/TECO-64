<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="options.xsl"?>
<teco name="teco" version="200">
    <section title="Text file options">
        <option>
            <short_name>C</short_name>
            <long_name>create</long_name>
            <help>Create new file if file does not exist.</help>
        </option>
        <option>
            <short_name>c</short_name>
            <long_name>nocreate</long_name>
            <help>Do not create new file if file does not exist.</help>
        </option>
        <option>
            <short_name>F</short_name>
            <long_name>formfeed</long_name>
            <help>Enables FF as a page delimiter.</help>
        </option>
        <option>
            <short_name>f</short_name>
            <long_name>noformfeed</long_name>
            <help>Disables FF as a page delimiter.</help>
        </option>
        <option>
            <short_name>R</short_name>
            <long_name>read-only</long_name>
            <help>Open file for input only.</help>
        </option>
        <option>
            <short_name>r</short_name>
            <long_name>noread-only</long_name>
            <default/>
            <help>Open file for input and output.</help>
        </option>
    </section>
    <section title="Indirect command file options">
        <option>
            <short_name>A</short_name>
            <long_name>arguments</long_name>
            <argument>required</argument>
            <help>Specify n or m,n arguments for command file.</help>
        </option>
        <option>
            <short_name>E</short_name>
            <long_name>execute</long_name>
            <argument>required</argument>
            <help>Execute TECO macro in file 'foo'.</help>
        </option>
        <option>
            <short_name>T</short_name>
            <long_name>text</long_name>
            <argument>required</argument>
            <help>Store text 'foo' in edit buffer.</help>
        </option>
    </section>
    <section title="Initialization options">
        <option>
            <short_name>I</short_name>
            <long_name>initialize</long_name>
            <argument>required</argument>
            <help>Use initialization file 'foo' at startup.</help>
        </option>
        <option>
            <short_name>i</short_name>
            <long_name>noinitialize</long_name>
            <help>Ignore TECO_INIT environment variable.</help>
        </option>
        <option>
            <short_name>m</short_name>
            <long_name>nomemory</long_name>
            <help>Ignore TECO_MEMORY environment variable.</help>
        </option>
    </section>
    <section title="Display options">
        <option>
            <short_name>D</short_name>
            <long_name>display</long_name>
            <argument>optional</argument>
            <help>Enable display mode, optionally using file 'foo'.</help>
        </option>
        <option>
            <short_name>d</short_name>
            <long_name>nodisplay</long_name>
            <help>Disable display mode.</help>
        </option>
        <option>
            <short_name>S</short_name>
            <long_name>scroll</long_name>
            <argument>required</argument>
            <help>Use 'n' lines for scrolling region (implies -D).</help>
        </option>
    </section>l
    <section title="Miscellaneous options">
        <option>
            <short_name>n</short_name>
            <long_name>nodefaults</long_name>
            <help>Equivalent to --noinitialize --nomemory --nodisplay.</help>
        </option>
        <option>
            <short_name>L</short_name>
            <long_name>log</long_name>
            <argument>required</argument>
            <help>Saves input and output in log file 'foo'.</help>
        </option>
         <option>
            <short_name>X</short_name>
            <long_name>exit</long_name>
            <help>Exit from TECO after executing all command-line options.</help>
        </option>
        <option>
            <short_name>H</short_name>
            <long_name>help</long_name>
            <help>Print this help message.</help>
        </option>
        <option>
            <long_name>version</long_name>
            <help>Print version and copyright information.</help>
        </option>
        <option type="hidden">
            <long_name>mung</long_name>
        </option>
        <option type="hidden">
            <short_name>p</short_name>
            <long_name>practice</long_name>
        </option>
       <option type="hidden">
            <short_name>k</short_name>
            <long_name>keys</long_name>
            <argument>required</argument>
        </option>
    </section>
</teco>
